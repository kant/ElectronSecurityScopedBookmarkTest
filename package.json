{
  "name": "electron-security-scoped-bookmark-test",
  "description": "App to test electrons security scoped bookmarks",
  "author": "rrosen326@gmail.com",
  "version": "0.1.27",
  "license": "MIT",
  "scripts": {
    "bumpversion": "npm version --no-git-tag-version patch",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "predist": "yarn bumpversion",
    "dist": "rm -rf dist/* && yarn compile && electron-builder -c.mac.identity=null -c.mas.identity=null  ; if [[ $? -eq 1 ]]; then echo 'IGNORE CODESIGNING ERROR'; fi",
    "postdist": "yarn codesign_masdev && yarn codesign_macdev",
    "dist:dir": "rm -rf dist/* && yarn compile && electron-builder  --dir -c.compression=store -c.mac.identity=null",
    "postinstall": "electron-builder install-app-deps",
    "codesign_masdev": "electron-osx-sign 'dist/mas/ElectronSecurityScopedBookmarkTestApp.app' --platform=mas --type=development --identity='82740405A7706688285585DF5928676402E99074' --entitlements='build/entitlements.mac.plist' --provisioning-profile='build/security_scoped_bookmark_pp_mac_development.provisionprofile'",
    "codesign_macdev": "electron-osx-sign 'dist/mac/ElectronSecurityScopedBookmarkTestApp.app' --platform=darwin --type=development --identity='82740405A7706688285585DF5928676402E99074' --entitlements='build/entitlements.mac.plist' --provisioning-profile='build/security_scoped_bookmark_pp_mac_development.provisionprofile'  --no-gatekeeper-assess"
  },
  "dependencies": {
    "bootstrap": "^4.2.1",
    "jquery": "^3.3.1",
    "node-sass": "^4.11.0",
    "popper.js": "^1.14.6",
    "sass-loader": "^7.1.0",
    "source-map-support": "^0.5.9",
    "vue-loader": "^15.4.2"
  },
  "devDependencies": {
    "css-loader": "^2.1.0",
    "electron": "^4.0",
    "electron-builder": "^20.36.2",
    "electron-webpack": "^2.6.1",
    "electron-webpack-vue": "^2.2.2",
    "style-loader": "^0.23.1",
    "vue": "^2.5.17",
    "webpack": "^4.26.0"
  },
  "//NOTES": {
    "//electron-builder": {
      "//1": "Setting mas.identity=null causes failure",
      "//2": "Having no 'dmg' target means dir also will not be created ",
      "//3": "Do codesigining directly via electron-osx-sign for greater control"
    }, 
    "//electron-osx-sign": {
      "//1": "codesign_macdev above - it works, but causes a gatekeeper error. Hence the '-no-gatekeeper-assess' option "
    }

  },
  "build": {
    "extends": "node_modules/electron-webpack/out/electron-builder.js",
    "appId": "com.k2companyllc.bookmarktest",
    "productName": "ElectronSecurityScopedBookmarkTestApp",
    "mac": {
      "type": "development",
      "category": "public.app-category.developer-tools",
      "target": [
        "dir",
        "dmg",
        "mas"
      ],
      "entitlements": "null",
      "entitlementsInherit": "null",
      "provisioningProfile": "null"
    }
  }
}
